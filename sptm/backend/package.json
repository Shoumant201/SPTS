{
  "name": "sptm-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Public Transport Management",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:validate": "tsx prisma/validate-migration.ts",
    "db:test-connection": "tsx -e \"import { PrismaClient } from '@prisma/client'; const prisma = new PrismaClient(); prisma.\\$connect().then(() => { console.log('Database connection successful'); process.exit(0); }).catch((e) => { console.error('Database connection failed:', e); process.exit(1); });\"",
    "migrate:full": "./scripts/run-migration.sh",
    "migrate:production": "tsx scripts/production-migration.ts",
    "migrate:production:dry-run": "tsx scripts/production-migration.ts --dry-run",
    "migrate:rollback": "tsx scripts/rollback-migration.ts",
    "migrate:validate": "tsx scripts/data-validation.ts",
    "deploy:zero-downtime": "./scripts/zero-downtime-deployment.sh",
    "test:smoke": "echo 'Smoke tests not implemented yet' && exit 0",
    "docs:validate": "tsx scripts/validate-docs.ts",
    "docs:coverage": "tsx scripts/check-coverage.ts",
    "docs:test-examples": "tsx scripts/test-examples.ts",
    "docs:generate": "tsx scripts/generate-openapi-spec.ts",
    "docs:report": "npm run docs:validate && npm run docs:coverage && npm run docs:test-examples",
    "docs:monitor": "tsx scripts/monitor-docs.ts",
    "docs:monitor:weekly": "tsx scripts/monitor-docs.ts weekly",
    "docs:monitor:monthly": "tsx scripts/monitor-docs.ts monthly"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.2.0",
    "prisma": "^5.6.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
